<Window x:Class="HHSAdvWin.ZMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HHSAdvWin"
        mc:Ignorable="d"
        Title="ZMessageBox"
        WindowStyle="None"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      CornerRadius="12"
                      GlassFrameThickness="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <!-- タイトルバー行 -->
            <RowDefinition Height="*"/>
            <!-- コンテンツ行 -->
        </Grid.RowDefinitions>

        <!-- タイトルバー -->
        <Border Grid.Row="0"
                CornerRadius="12"
                Background="{DynamicResource TitleBarBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ドラッグ領域（テキスト側） -->
                <TextBlock Text="ZMessageBox"
                           x:Name="TitleTextBlock"
                           VerticalAlignment="Center"
                           Margin="8,0"
                           Foreground="{DynamicResource TitleBarForegroundBrush}"
                           MouseLeftButtonDown="TitleBar_DragArea_MouseLeftButtonDown"/>

                <!-- 右側ボタン群 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="—" Width="46" Click="Minimize_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Background="Transparent" BorderThickness="0"/>
                    <Button Content="□" Width="46" Click="Maximize_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Background="Transparent" BorderThickness="0"/>
                    <Button Content="×" Width="46" Click="Close_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            Background="Transparent" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- コンテンツ（Marginで32を空けず、行で分ける） -->
        <Grid Grid.Row="1" Background="{DynamicResource BackgroundBrush}">
            <!-- コンテンツ -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="textBox" TextWrapping="Wrap" Text="TextBox" Grid.Row="0" Margin="8,4,8,4" BorderThickness="0" IsEnabled="False"/>
                <StackPanel Grid.Row="1">
                    <Button x:Name="btnOkay" Content="了解" HorizontalAlignment="Right" Margin="8,4,8,4" Click="Okay_Clicked"/>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Window>
